generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model profile {
  id             String          @id @unique @db.Uuid
  email          String
  first_name     String
  last_name      String
  created_at     DateTime        @default(now())
  role           role
}

model client_profile {
  id         String    @id @unique @default(cuid()) @db.Uuid
  profile_id String    @unique @db.Uuid
}

model intern_profile {
  id         String   @id @unique @default(cuid()) @db.Uuid
  profile_id String   @unique @db.Uuid
}

model ticket {
  id          Int            @id @default(autoincrement())
  uuid        String         @unique @default(cuid()) @db.Uuid
  name        String
  description String
  device_id   String
  status      ticket_status	 @default(NOT_STARTED)
  starts_at   DateTime
  finished_at DateTime?
  created_at  DateTime       @default(now())
  intern_id   String
  client_id   String
}

model inventory {
  id         String      @id @unique @default(cuid()) @db.Uuid
  client_id  String
  created_at DateTime @default(now())
}

model device {
  id             Int       @id @default(autoincrement())
  uuid           String?   @unique @default(cuid())
  name           String
  description    String
  inventory_id   String
  // procedure      String
  // type           String
  // tags           String[]
  image_url      String
  // external_id    String
  // brand          String
  // serial_number  String
  // location       String
  created_at     DateTime  @default(now())
}

enum role {
  CLIENT
  INTERN
  ADMIN
}

enum ticket_status {
  NOT_STARTED
  ACTIVE
  CLOSED
}
